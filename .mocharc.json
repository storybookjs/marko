{
  "$schema": "https://json.schemastore.org/mocharc",
  "timeout": 30000,
  "enable-source-maps": true,
  "require": ["~preload", "mocha-snap", "tests/setup.ts"],
  "spec": "tests/**/*.test.@(ts|js)",
  "watchFiles": [
    "packages/*/src/**/*.@(ts|marko)",
    "tests/**/*.@(ts|js|marko)",
    "!**/__snapshots__/**"
  ]
}
