{
  "name": "@storybook/marko",
  "private": true,
  "workspaces": [
    "packages/frameworks/*",
    "packages/renderers/*",
    "tests/frameworks/*"
  ],
  "scripts": {
    "build": "npm run build:types && node -r ~preload ./scripts/build.ts",
    "build:types": "tsc -b tsconfig.build.json",
    "change": "changeset add",
    "ci:test": "c8 npm test",
    "format": "eslint -f unix --fix . && prettier . --write --log-level=error && sort-package-json --quiet ./{,packages/*/*/,tests/frameworks/*/}package.json",
    "prepare": "husky install",
    "release": "npm run build && changeset publish",
    "test": "node -r '~preload' --test ./tests/fixtures/*/*.test.ts",
    "version": "changeset version && npm i --package-lock-only"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@babel/register": "^7.22.15",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@marko/compiler": "^5.33.2",
    "@playwright/test": "^1.38.0",
    "@testing-library/dom": "^9.3.3",
    "@types/node": "^20.6.2",
    "@types/resolve": "^1.20.2",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "c8": "^8.0.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "marko": "^5.31.10",
    "prettier": "^3.0.3",
    "sort-package-json": "^2.5.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "~preload": "file:scripts/preload.js"
  }
}
